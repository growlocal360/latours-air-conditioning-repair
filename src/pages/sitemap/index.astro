---
import BaseLayout from '../../layouts/BaseLayout.astro';

const breadcrumbSchema = {
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  "itemListElement": [
    {
      "@type": "ListItem",
      "position": 1,
      "name": "Home",
      "item": "https://latourshvac.com/"
    },
    {
      "@type": "ListItem",
      "position": 2,
      "name": "Sitemap",
      "item": "https://latourshvac.com/sitemap/"
    }
  ]
};
---

<BaseLayout
  title="Sitemap | Latour's Air Conditioning & Heating"
  description="Sitemap for Latour's Air Conditioning & Heating website. Find all pages for HVAC services, service areas, and more in Lake Charles, LA."
  canonicalUrl="https://latourshvac.com/sitemap/"
  breadcrumbSchema={breadcrumbSchema}
>
  <!-- Breadcrumbs -->
  <nav class="breadcrumbs" aria-label="Breadcrumb">
    <div class="container">
      <ol>
        <li><a href="/">Home</a></li>
        <li>Sitemap</li>
      </ol>
    </div>
  </nav>

  <!-- Page Header -->
  <section class="page-header">
    <div class="container">
      <h1>Sitemap</h1>
      <p>Browse all pages on our website</p>
    </div>
  </section>

  <!-- Main Content -->
  <section class="content-section">
    <div class="container">
      <div class="sitemap-grid">

        <!-- Main Pages -->
        <div class="sitemap-section">
          <h2>Main Pages</h2>
          <ul>
            <li><a href="/">Home - Air Conditioning Repair Service Lake Charles</a></li>
            <li><a href="/about/">About Latour's HVAC</a></li>
            <li><a href="/schedule-service/">Schedule Service</a></li>
            <li><a href="/service-areas/">Service Areas</a></li>
          </ul>
        </div>

        <!-- AC Contractor Services -->
        <div class="sitemap-section">
          <h2>Air Conditioning Services</h2>
          <ul>
            <li><a href="/ac-contractor/">AC Contractor</a></li>
            <li><a href="/ac-contractor/ac-repair/">AC Repair</a></li>
            <li><a href="/ac-contractor/ac-installation/">AC Installation</a></li>
            <li><a href="/ac-contractor/ac-replacement/">AC Replacement</a></li>
            <li><a href="/ac-contractor/ac-tune-up/">AC Tune-Up</a></li>
            <li><a href="/ac-contractor/ductless-mini-split/">Ductless Mini Split</a></li>
            <li><a href="/ac-contractor/emergency-ac-repair/">Emergency AC Repair</a></li>
          </ul>
        </div>

        <!-- Furnace Repair Services -->
        <div class="sitemap-section">
          <h2>Furnace Repair Services</h2>
          <ul>
            <li><a href="/furnace-repair/">Furnace Repair</a></li>
          </ul>
        </div>

        <!-- Heating Contractor Services -->
        <div class="sitemap-section">
          <h2>Heating Services</h2>
          <ul>
            <li><a href="/heating-contractor/">Heating Contractor</a></li>
            <li><a href="/heating-contractor/heat-pump-installation/">Heat Pump Installation</a></li>
            <li><a href="/heating-contractor/heat-pump-repair/">Heat Pump Repair</a></li>
            <li><a href="/heating-contractor/furnace-installation/">Furnace Installation</a></li>
            <li><a href="/heating-contractor/heating-tune-up/">Heating Tune-Up</a></li>
          </ul>
        </div>

        <!-- HVAC Contractor Services -->
        <div class="sitemap-section">
          <h2>HVAC Services</h2>
          <ul>
            <li><a href="/hvac-contractor/">HVAC Contractor</a></li>
            <li><a href="/hvac-contractor/hvac-installation/">HVAC Installation</a></li>
            <li><a href="/hvac-contractor/hvac-maintenance/">HVAC Maintenance</a></li>
            <li><a href="/hvac-contractor/indoor-air-quality/">Indoor Air Quality</a></li>
            <li><a href="/hvac-contractor/duct-cleaning/">Duct Cleaning</a></li>
            <li><a href="/hvac-contractor/thermostat-installation/">Thermostat Installation</a></li>
          </ul>
        </div>

        <!-- Service Areas -->
        <div class="sitemap-section">
          <h2>Service Areas</h2>
          <ul>
            <li><a href="/service-areas/">All Service Areas</a></li>
            <li><a href="/service-areas/sulphur-la/">Sulphur, LA</a></li>
            <li><a href="/service-areas/westlake-la/">Westlake, LA</a></li>
            <li><a href="/service-areas/moss-bluff-la/">Moss Bluff, LA</a></li>
